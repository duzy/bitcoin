project (tools/gcc/c++)

CXXFLAGS += $(@.variant_cflags)
CXXFLAGS += -DLEVELDB_PLATFORM_POSIX
CXXFLAGS += -I"$(dirdir $/)" -I"$(dirdir $/)/include"

libmemenv.a:[(compare) (stderr) (shell)]: memenv.o
	$(ARCHIVE) $@ $^

%.o:[(compare) (stderr) (shell)]: %.cc
	$(COMPILE) $(CXXFLAGS) $^ -o $@

clean:[(stderr) (stdout) (shell)]
	@echo "clean: $." && rm -vf *.a *.o

use:
	CXXFLAGS += -I"$/"
	LDFLAGS += -L"$/"
	LDLIBS += -lmemenv
